<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.ayala.sapirjewelry.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin">

        <ImageView
            android:layout_width="@dimen/logo_widht"
            android:layout_height="match_parent"
            android:src="@drawable/sapir_card_logo"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="@dimen/logo_widht"
            android:layout_height="@dimen/logo_height"
            android:src="@drawable/sapir_card1"
            android:id="@+id/imageView6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/line_size"
            android:background="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        android:id="@+id/fragment_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/hadline_size"
                    android:text="הרשמה למועדון הלקוחות"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="@dimen/edit_text_size"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_first_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/texr_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שם פרטי"
                    android:textSize="@dimen/texr_size"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="@dimen/edit_text_size"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/texr_size"
                    android:id="@+id/input_family_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שם משפחה"
                    android:textSize="@dimen/texr_size"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="@dimen/edit_text_size"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/texr_size"
                    android:inputType="phone"
                    android:id="@+id/input_phone_number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="טלפון"
                    android:textSize="@dimen/texr_size"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="@dimen/edit_text_size"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/texr_size"
                    android:inputType="textEmailAddress"
                    android:id="@+id/input_email_address"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="@dimen/texr_size"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/edit_text_size"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/texr_size"
                    android:id="@+id/input_birthday"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="תאריך לידה"
                    android:textSize="@dimen/texr_size"
                    android:textColor="@color/black"
                    android:id="@+id/birtday_btn"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/edit_text_size"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/texr_size"
                    android:id="@+id/input_wedding_date"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="יום נישואים"
                    android:textSize="@dimen/texr_size"
                    android:textColor="@color/black"
                    android:id="@+id/wedding_date_btn"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/texr_size"
                    android:text="הרשם"
                    android:id="@+id/register_btn"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/texr_size"
                    android:text="קבלת נתונים"
                    android:id="@+id/register_get_btn"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:layout_width="@dimen/hose_width"
            android:layout_height="@dimen/phone_size"
            android:src="@drawable/house"
            android:id="@+id/home" />

        <ImageView
            android:layout_width="@dimen/hose_width"
            android:layout_height="match_parent"
            android:src="@drawable/phone"
            android:layout_marginLeft="@dimen/margin_left"
            android:id="@+id/conact"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תפריט"
            android:textSize="@dimen/texr_size"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="צור קשר"
            android:textSize="@dimen/texr_size"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/margin_left"/>
    </LinearLayout>
</LinearLayout>
